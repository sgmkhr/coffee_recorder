<div class='container'>
  <div class='heading-title'>
    <h1 class='headind-text'><%= I18n.t('users.index.heading') %></h1>
  </div>
  <div class='row p-5 d-flex'>
    <% @users.each do |user| %>
      <div class='card mr-2' style='width: 18rem;'>
        <%= link_to user_path(user.id) do %>
          <div class='card-body d-flex'>
            <%= image_tag user.get_profile_image(40,40), class: 'rounded-circle mr-2' %>
            <h5 class='card-title'><%= user.nick_name %></h5>
          </div>
        <% end %>
        <p><%= I18n.t('users.index.count') + user.coffees.count %></p>
      </div>
    <% end %>
  </div>
</div>