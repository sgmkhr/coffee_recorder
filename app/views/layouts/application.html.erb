<!DOCTYPE html>
<html>
  <head>
    <title>CoffeeRecorder</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/945e2890b0.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <main class='mb-auto'>
      <p class='text-success text-center --bs-success-bg-subtle'><%= flash[:notice] %></p>
      <p class='text-danger text-center --bs-danger-bg-subtle'><%= flash[:caution] %></p>
      <%= yield %>
    </main>
    <%= render 'layouts/footer' %>
  </body>
</html>
