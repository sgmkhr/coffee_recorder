<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand p-3" href="/">Coffee Recorder</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to I18n.t('links.logout'), destroy_user_session_path, method: :delete, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to  I18n.t('links.menu'), index_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to I18n.t('links.mypage'), user_path(current_user.id), class: 'nav-link text-white' %>
            </li>
          <% elsif admin_signed_in? %>
            <li class="nav-item">
              <%= link_to I18n.t('links.logout'), destroy_admin_session_path, method: :delete, class: 'nav-link text-white' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to I18n.t('links.signup'), new_user_registration_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to I18n.t('links.login'), new_user_session_path, class: 'nav-link text-white' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>